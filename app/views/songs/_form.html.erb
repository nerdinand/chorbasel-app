<%= render 'errors', model: @song %>

<%= form_for @song do |f| %>
  <div class="form-field">
    <p><%= f.label :title %> <%# i18n-tasks-use t('activerecord.attributes.song.title') %> *</p>
    <p><%= f.text_field :title %></p>
  </div>

  <div class="form-field">
    <p><%= f.label :composer %> <%# i18n-tasks-use t('activerecord.attributes.song.composer') %></p>
    <p><%= f.text_field :composer %></p>
  </div>

  <div class="form-field" data-controller="single-choice-combobox" data-single-choice-combobox-empty-label-value="<%= t('stimulus.single_choice_combobox.empty_label') %>" data-single-choice-combobox-choices-value="<%= Song.all.pluck(:arranger).flatten.uniq.to_json %>">
    <p><%= f.label :arranger %> <%# i18n-tasks-use t('activerecord.attributes.song.arranger') %></p>
    <%= f.text_field :arranger, value: @song.arranger, data: { 'single-choice-combobox-target': 'textField', action: 'single-choice-combobox#input' }, class: 'mb-2' %>
    <div data-single-choice-combobox-target="choices" class="mb-2"></div>
  </div>

  <div class="form-field" data-controller="single-choice-combobox" data-single-choice-combobox-empty-label-value="<%= t('stimulus.single_choice_combobox.empty_label') %>" data-single-choice-combobox-choices-value="<%= Song.all.pluck(:key_signature).flatten.uniq.to_json %>">
    <p><%= f.label :key_signature %> <%# i18n-tasks-use t('activerecord.attributes.song.key_signature') %></p>
    <%= f.text_field :key_signature, value: @song.key_signature, data: { 'single-choice-combobox-target': 'textField', action: 'single-choice-combobox#input' }, class: 'mb-2' %>
    <div data-single-choice-combobox-target="choices" class="mb-2"></div>
  </div>

  <div class="form-field" data-controller="single-choice-combobox" data-single-choice-combobox-empty-label-value="<%= t('stimulus.single_choice_combobox.empty_label') %>" data-single-choice-combobox-choices-value="<%= Song.all.pluck(:time_signature).flatten.uniq.to_json %>">
    <p><%= f.label :time_signature %> <%# i18n-tasks-use t('activerecord.attributes.song.time_signature') %></p>
    <%= f.text_field :time_signature, value: @song.time_signature, data: { 'single-choice-combobox-target': 'textField', action: 'single-choice-combobox#input' }, class: 'mb-2' %>
    <div data-single-choice-combobox-target="choices" class="mb-2"></div>
  </div>

  <div class="form-field" data-controller="single-choice-combobox" data-single-choice-combobox-empty-label-value="<%= t('stimulus.single_choice_combobox.empty_label') %>" data-single-choice-combobox-choices-value="<%= Song.all.pluck(:language).flatten.uniq.to_json %>">
    <p><%= f.label :language %> <%# i18n-tasks-use t('activerecord.attributes.song.language') %></p>
    <%= f.text_field :language, value: @song.language, data: { 'single-choice-combobox-target': 'textField', action: 'single-choice-combobox#input' }, class: 'mb-2' %>
    <div data-single-choice-combobox-target="choices" class="mb-2"></div>
  </div>

  <div class="form-field">
    <p><%= f.label :lyrics %> <%# i18n-tasks-use t('activerecord.attributes.song.lyrics') %></p>
    <p><%= f.text_area :lyrics %></p>
  </div>

  <div class="form-field">
    <p><%= f.label :repertoire %> <%# i18n-tasks-use t('activerecord.attributes.song.repertoire') %></p>
    <p><%= f.check_box :repertoire %></p>
  </div>

  <div class="form-field" data-controller="combobox" data-combobox-choices-value="<%= Song.all.pluck(:genres).flatten.uniq.to_json %>">
    <p><%= f.label :genres %> <%# i18n-tasks-use t('activerecord.attributes.song.genres') %></p>
    <%= f.text_field :genres, value: @song.genres.join(', '), data: { 'combobox-target': 'textField', action: 'combobox#input' }, class: 'mb-2' %>
    <div data-combobox-target="choices" class="mb-2"></div>
  </div>

  <div class="form-field">
    <p><%= f.label :registers %> <%# i18n-tasks-use t('activerecord.attributes.song.registers') %></p>
    <p>
      <%= f.collection_check_boxes(:registers, Register::Song.all, :value, :human_name) do |box|
        content_tag :p, class: 'text-xs' do
          box.label { box.check_box + box.text }
        end
      end %>
    </p>
  </div>

  <p><%= f.submit class: 'btn btn-primary' %>  <%# i18n-tasks-use t('helpers.submit.song.create') %></p>
<% end %>
