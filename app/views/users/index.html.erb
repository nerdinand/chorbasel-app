<% content_for :title, t('.title') %>

<% if policy(User).new? %>
  <%= link_to t('.new'), new_user_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.email') %></th>
      <th><%= t('.roles') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.full_name %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <ul>
            <% user.roles.each do |role| %>
              <li><%= role %></li>
            <% end %>
          </ul>
        </td>
        <td>
          <% if policy(user).edit? %>
            <%= link_to t('.edit'), edit_user_path(user) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
