<% content_for :title, t('.title') %>

<h2><%= t('.subtitle') %></h2>

<div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 mt-4 relative">
  <% @users.each do |user| %>
    <div class="w-full aspect-[200/323] relative">
      <%= image_tag user.profile_picture, class: "w-full h-full object-cover object-bottom" %>
      <div class="flex flex-col gap-2 mt-2">
        <% if user.human_register.present? %>
          <p class="absolute rounded-md top-2 left-2 bg-primary border-2 border-white font-semibold text-white text-sm px-2 py-1 flex items-center">
            <img alt="" class="mr-1" src="<%= image_path "music-note.svg" %>"/>
            <span><%= user.human_register %></span>
          </p>
        <% end %>
        <p class="font-semibold text-lg leading-tight"><%= user.full_name %></p>
      </div>
    </div>
  <% end %>
</div>
